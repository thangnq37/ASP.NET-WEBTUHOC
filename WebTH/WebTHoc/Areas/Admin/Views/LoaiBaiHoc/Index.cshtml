@model IEnumerable<Model.EF.LoaiBaiHoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Loại bài học    
}
@section Type{
    Danh sách loại bài học
    }

<div class="box-header">
    <h3 class="box-title">Danh Sách User</h3>
</div>
<div>
    <p>
        @Html.ActionLink("Thêm Loại Bài Học", "Create", "", new { @class = "btn btn-info" })
    </p>
</div>
<!-- /.box-header -->
<div class="box-body">
    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Ten)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ThuTu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mota)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IDCha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnHien)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ten)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThuTu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mota,new { @class = "limitText" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDCha)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AnHien)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @*@Html.ActionLink("Details", "Details", new { id = item.ID }) |*@
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }
        </tbody>
        <tfoot>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Ten)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ThuTu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mota)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IDCha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnHien)
                </th>
                <th></th>
            </tr>
        </tfoot>
    </table>
</div>
<!-- /.box-body -->
