@model IEnumerable<Model.EF.BinhLuan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Bình Luận
}
@section Type{
    Danh Sách Bình Luận
}

<div class="box-header">
    <h3 class="box-title">Danh Sách Bình Luậnr</h3>
</div>
<div>
    <p>
        @Html.ActionLink("Thêm Bình Luận", "Create", "", new { @class = "btn btn-info" })
    </p>
</div>
<!-- /.box-header -->
<div class="box-body">
    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NoiDung)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BaiHocID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnHien)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserID)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="limitText">
                        @Html.DisplayFor(modelItem => item.NoiDung)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BaiHocID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnHien)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserID)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                        @*@Html.ActionLink("Details", "Details", new { id=item.ID }) |*@
                        @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NoiDung)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BaiHocID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnHien)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserID)
                </th>
                <th></th>
            </tr>
        </tfoot>
    </table>
</div>
<!-- /.box-body -->