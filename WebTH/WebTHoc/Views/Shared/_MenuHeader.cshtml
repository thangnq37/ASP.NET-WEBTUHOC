
@{
    Layout = null;
}
<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <button class="navbar-toggle" data-toggle="collapse" data-target="#menu1">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="~/Home"><span style="font-size:24px" class="glyphicon glyphicon-home"></span></a>
        </div>
        <div class="collapse navbar-collapse" id="menu1">
            <ul class="nav navbar-nav menu-main">
                @foreach (Model.EF.LoaiBaiHoc item in ViewData["MenuList"] as List<Model.EF.LoaiBaiHoc>)
                {
                    if (item.IDCha == null)
                    {
                        <li class="menu-header">
                            <div class="w3-dropdown-hover" style="background-color: #f5f5f5;padding: 15px; text-decoration:none">
                                <a href="~/Home/Lession?id=@item.ID" style="text-decoration:none">@item.Ten</a>
                                <div class="w3-dropdown-content w3-bar-block w3-border" style="margin-top:15px;margin-left:-14px">
                                    @foreach (Model.EF.LoaiBaiHoc item1 in ViewData["MenuList"] as List<Model.EF.LoaiBaiHoc>)
                                    {
                                        if (item1.IDCha == item.ID)
                                        {
                                            <a href="~/Home/LessionType?id=@item1.ID" class="w3-bar-item w3-button" style="text-decoration:none">@item1.Ten</a>
                                        }
                                    }
                                    
                                </div>
                            </div>
                        </li>
                    }
                }
            </ul>
            
            <ul class="nav navbar-nav navbar-right menu-main">
                <li>
                    <div class="w3-dropdown-hover" style="background-color: #f5f5f5;padding: 15px; text-decoration:none">
                        @*<a href="~/Home/Lession?id=@item.ID" style="text-decoration:none">@item.Ten</a>*@
                        <a href="" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-search"></span></a>
                        <div class="w3-dropdown-content w3-bar-block w3-border" style="margin-top:15px;margin-left:-240px">
                            @*<form action="" class="navbar-form">*@
                            @using (Html.BeginForm("Index","Home", FormMethod.Get,new { @class= "navbar-form" }))
                            {
                                <div class="input-group">
                                    <input type="text" class="form-control" name="searchBaiHoc" value="@ViewBag.Search" style="width: 200px;" placeholder="Search ...">
                                    <div class="input-group-btn">
                                        <button type="submit" class="btn btn-info"><span class="glyphicon glyphicon-search"></span></button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </li>
                <li><a href="~/Admin/Home">Sign in <span class="glyphicon glyphicon-user"></span></a></li>
            </ul>
        </div>
    </div>
</nav>
